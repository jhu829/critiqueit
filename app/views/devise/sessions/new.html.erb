<%= stylesheet_link_tag "login" %>

<div class ="listing">
	<div class ="loginbox">
		<p id='top-line'>BE THE BEST YOU</p>
		<p id='second-line'>MAKE THE PERFECT PITCH</p>
		<br/>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		  <%= f.email_field :email, :autofocus => true, :placeholder =>'EMAIL', :id=>'log_email', :class=>'textchange' %>

		  <%= f.password_field :password, :placeholder=>'PASSWORD', :id=>'log_pass', :class=>'textchange' %>

		  <% if devise_mapping.rememberable? -%>
		    <div id="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>
		  	<%= f.submit 'SIGN IN', :id=>'signbutton'%>
		<% end %>
		<div class='ex_links'>
		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>