<div class="listing">
		<h1 class = "page_title">BROWSE</h1>

	<div class="toppanel">
		<div class="searchpanel">
			<input id="search_bar"  type="text" placeholder='search...'></input>
			<button class="button" id='search_button'></button>
		</div>	
			<button class ="button submit" id="upload">UPLOAD VIDEO</button>
	</div>

	<h3 class='sub_title' id='label_recent wh'>FEATURED PITCHES</h3>
	<div id='featurepanel'>
	</div>

	<div class="videopanel">
		<div class="videorow">

			<% @videos.each do |video| %>
				<div class= "videogroup">
				<%= link_to image_tag("stock.png", :class=>'video_stock button'), video %>
					<div class="overlay" id="videotext1">
						<p style="text-align:center">
							</br>
							<table class="table">
								<tr class="videotexttitle">
									<td colspan="2" style="color:#2e2f2f;"><%= video.title %></td>
								</tr>
								
								<tr >
									<td class="videotext">SOLD</td>
									<td class="videotext">NOT SOLD</td>
								</tr>
								<tr >
									<td class="videotextnum"> <%= video.sold %> </td>
									<td class="videotextnum"> <%= video.notsold %> </td>
								</tr>
								<tr >
									<td class="videotextuser">by <%= User.where(:id => video.user_id).name %></td>
								</tr>
							</table>
						</p>
					</div>
				</div>
			<% end %>
			
		</div>
	</div>

