<div class="listing">
	<div class="toppanel">
		<div class="searchpanel">
			<button class ="button" id="upload">UPLOAD NEW VIDEO</button>
			<input class="search"  type="text"></input>
			<button class="button2"> SEARCH</button>
		</div>
		
		
	</div>
	<div class = "title">
		YOUR VIDEOS
	</div>
	<div class="videopanel">
		<div class = "videorow">
		<% @videos.each do |video| %>
		
			<div class= "videogroup">
				<% link_to 'video',  videos_path %>

				<a href="uploader.html"><img class="video" id="1" style="height:auto; width:auto; max-width:300px; max-height:300px;" src="/assets/stock.png"></a>
				<div class="overlay" id="videotext1">
					<p style="text-align:center">
						</br>
						<table class="table">
							<tr class="videotexttitle">
								<td colspan="2" ><%= video.title %></td>
							</tr>
							<tr >
								<td class="videotext">SOLD</td>
								<td class="videotext">NOT SOLD</td>
							</tr>
							<tr >
								<td class="videotextnum"> <%= video.sold %> </td>
								<td class="videotextnum"> <%= video.notsold %> </td>
							</tr>
						</table>
					</p>
				</div>
			</div>
		
		<% end %>
		</div>
	</div>

</div>
